<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/mubashir_register">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgadder"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_person_add"
        tools:ignore="SpeakableTextPresentCheck"
        />

    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/text_field_last_name"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edit_text_shape"
            android:drawableEnd="@drawable/ic_username"
            android:fontFamily="@font/jazeera_arabic_regular"
            android:hint="@string/lastName"
            android:inputType="text"
            android:padding="5dp"
            android:textColor="@color/colorSimiPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/text_field_first_name"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edit_text_shape"
            android:drawableEnd="@drawable/ic_username"
            android:fontFamily="@font/jazeera_arabic_regular"
            android:hint="@string/firstName"
            android:inputType="text"
            android:padding="5dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorSimiPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <EditText
        android:id="@+id/text_field_phone"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"
        android:drawableStart="@drawable/ic_phone"
        android:fontFamily="@font/jazeera_arabic_regular"
        android:hint="@string/phone_num"
        android:inputType="phone"
        android:padding="5dp"
        android:textColor="@color/colorSimiPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/text_field_email"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"
        android:drawableEnd="@drawable/ic_mail"
        android:fontFamily="@font/jazeera_arabic_regular"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/colorSimiPrimary"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/text_field_password"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:fontFamily="@font/jazeera_arabic_regular"
        android:hint="@string/pass"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColor="@color/colorSimiPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/text_field_repass"
        android:layout_width="320dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_shape"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:fontFamily="@font/jazeera_arabic_regular"
        android:hint="@string/repass"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColor="@color/colorSimiPrimary"
        android:textColorHint="@color/colorPrimary"
        tools:ignore="TouchTargetSizeCheck" />


    <Button
        android:id="@+id/register_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_shape"
        android:fontFamily="@font/jazeera_arabic_regular"
        android:text="@string/register"
        android:textColor="@color/colorSimiPrimary"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />


</LinearLayout>