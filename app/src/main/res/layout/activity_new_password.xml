<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPasswordActivity"
    android:orientation="vertical"
    android:background="@drawable/mubashir_login">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/mubashir_icon_trans"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="قم بإدخال كلمة المرور الجديدة"
        android:textSize="24sp"
        android:textColor="@color/colorSimiPrimary"
        android:fontFamily="@font/cairo_regular"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/new_repass"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:textColor="@color/colorSimiPrimary"
        android:textColorHint="@color/colorPrimary"
        android:hint="كلمة المرور"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:fontFamily="@font/jazeera_arabic_regular"
        android:background="@drawable/edit_text_shape"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:padding="5dp"
        />

    <EditText
        android:id="@+id/new_repass2"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:textColor="@color/colorSimiPrimary"
        android:textColorHint="@color/colorPrimary"
        android:hint="أعد كلمة المرور"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:fontFamily="@font/jazeera_arabic_regular"
        android:background="@drawable/edit_text_shape"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:padding="5dp"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="تأكيد"
        android:textSize="24sp"
        android:background="@drawable/btn_shape"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorSimiPrimary"
        />

</LinearLayout>